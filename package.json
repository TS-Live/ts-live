  },
  "devDependencies": {
    "@types/dom-mediacapture-transform": "^0.1.2",
    "@types/dom-webcodecs": "^0.1.3",
    "@types/emscripten": "^1.39.6",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "typescript": "4.5.4"
  }
